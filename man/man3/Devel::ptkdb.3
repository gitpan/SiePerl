.IX Item "PTKDB_BRKPT_COLOR"
.Vb 1
\&                Sets the background color of a set breakpoint
.Ve
.Ip "\s-1PTKDB_DISABLEDBRKPT_COLOR\s0" 4
.IX Item "PTKDB_DISABLEDBRKPT_COLOR"
.Vb 1
\&                Sets the background color of a disabled breakpoint
.Ve
